<div class="container center-text">
  <h1>Let's Talk</h1>

  <p>
    <strong>Name:</strong>
  </p>
  <p>Chat Log</p>

  <div class="container">
    <h3 class=" text-center">Let's Talk</h3>
    <div>
        <div style="margin:auto">
            <div style="background:whitesmoke !important">
                <input placeholder="Type a message"/>
            </div>
        </div>
    </div>
  </div>



  <%= form_with model: @message do |f| %>
    <%= label_tag(:body, "Message") %>
    <%= text_field_tag(:body) %>
    <%= submit_tag("Send") %>
  <% end %>
</div>
